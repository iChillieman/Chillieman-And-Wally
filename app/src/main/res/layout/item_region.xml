<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/item_region_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="omg guys this askddnasb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_region_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comma"
        app:layout_constraintBottom_toBottomOf="@id/item_region_name"
        app:layout_constraintStart_toEndOf="@id/item_region_name" />

    <TextView
        android:id="@+id/item_region_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="region"
        app:layout_constraintBottom_toBottomOf="@id/item_region_name"
        app:layout_constraintStart_toEndOf="@id/item_region_comma"/>

    <TextView
        android:id="@+id/item_region_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code"
        app:layout_constraintBottom_toBottomOf="@id/item_region_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_region_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="capital"
        app:layout_constraintTop_toBottomOf="@id/item_region_name" />

    <!-- Quick hack to separate items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_region_capital"/>

</androidx.constraintlayout.widget.ConstraintLayout>